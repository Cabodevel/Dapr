{
    "version": "2.0.0",
    "appId": "hello-world",
    "appPort": 5007,
    "httpPort": 5010,
    "grpcPort": 50010,
    "label": "daprd-debug",
    "type": "daprd",
    "dependsOn": "build",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dapr.microservice.webapi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/dapr.microservice.webapi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/dapr.microservice.webapi.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}